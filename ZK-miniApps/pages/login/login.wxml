<form bindsubmit="login">
<view class="container"> 
 
 <view class="login-icon"> 
 <image class="login-img" src="../../images/company_auth.png"></image> 
 </view> 
 <view class="login-from"> 
 
 <view class="inputView"> 
  
  <label class="loginLab">用户名</label> 
  <input name="userName" class="inputText" placeholder="请输入用户名" bindinput="usernameInput" /> 
 </view> 
 <view class="line"></view> 
 
 <view class="inputView"> 
  
  <label class="loginLab">密码</label> 
  <input name="password" class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
 
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}"  form-type="submit" >登录</button> 
 </view> 
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" bindtap="toRegister">新用户注册</button> 
 </view> 
 </view> 
</view>
</form>
